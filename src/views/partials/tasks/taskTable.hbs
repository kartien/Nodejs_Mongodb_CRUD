<body>
<link rel="stylesheet" href="css/title.css">
{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
    {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
               
               {{#if done}}
                    <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">Undone</a>
                {{else}}
                     <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Done</a>
                {{/if}}
                <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
                <a href="/tasks/{{_id}}/edit" class="btn btn-info">Update</a>
            </td>
        </tr> 
    {{/each}}
    </tbody>
</table>
 {{else}}
    <div class="text-center text-black wrapper">
        <div class="typing-demo">
           You currently have no tasks
        </div>
    </div>
    <div class="col-md-8">
        <img class="image" src="img/404.jpg">
    </div>
{{/if}}
</body>
